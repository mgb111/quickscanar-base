# Polar.sh Integration Environment Variables
# Copy this file to .env.local and fill in your actual values

# Polar.sh API Configuration
POLAR_API_KEY=your_polar_api_key_here
POLAR_API_URL=https://api.polar.sh/api/v1

# Polar.sh Checkout URLs
POLAR_MONTHLY_CHECKOUT_URL=https://buy.polar.sh/polar_cl_tIJXTsoXdnxQRDa7GaT3JBFrWiJY3CTYZ0vkr2Mwj9d
POLAR_YEARLY_CHECKOUT_URL=https://buy.polar.sh/polar_cl_uJCvGJRiHoQ9Y1fNO8c8aSlVofV5iTlzVtlaQ3hUriO

# Success and Cancel URLs for Polar.sh
POLAR_SUCCESS_URL=https://quickscanar.com/subscription/success?checkout_id={CHECKOUT_ID}
POLAR_CANCEL_URL=https://quickscanar.com/subscription/cancel

# Webhook Configuration
POLAR_WEBHOOK_SECRET=your_webhook_secret_here
POLAR_WEBHOOK_URL=https://quickscanar.com/api/polar/webhook

# Supabase Configuration (for webhook integration)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Database Configuration (if using separate database for subscriptions)
# SUBSCRIPTION_DATABASE_URL=your_subscription_db_url

# Feature Flags
ENABLE_SUBSCRIPTION_LIMITS=true
ENABLE_USAGE_TRACKING=true
ENABLE_PAYMENT_HISTORY=true

# Subscription Plan IDs (from Polar.sh dashboard)
POLAR_PRICE_FREE=price_free_plan_id
POLAR_PRICE_STARTER=price_starter_plan_id
POLAR_PRICE_PRO=price_pro_plan_id
POLAR_PRICE_STARTER_YEARLY=price_starter_yearly_plan_id
POLAR_PRICE_PRO_YEARLY=price_pro_yearly_plan_id

# Payment Processing (if using additional payment processors)
# STRIPE_PUBLISHABLE_KEY=your_stripe_key
# STRIPE_SECRET_KEY=your_stripe_secret

# Email Notifications
ENABLE_SUBSCRIPTION_EMAILS=true
SUBSCRIPTION_FROM_EMAIL=noreply@quickscanar.com

# Analytics and Tracking
ENABLE_SUBSCRIPTION_ANALYTICS=true
TRACK_SUBSCRIPTION_EVENTS=true

# File Upload Limits
MAX_FILE_SIZE_MB=100

# Cloudflare R2 Configuration (Alternative to Supabase Storage)
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_ACCESS_KEY_ID=your_r2_access_key_id
CLOUDFLARE_SECRET_ACCESS_KEY=your_r2_secret_access_key
CLOUDFLARE_R2_BUCKET_NAME=quickscanar
