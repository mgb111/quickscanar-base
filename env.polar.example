# Polar.sh Integration Configuration
# Copy this file to .env.local and fill in your actual values

# Polar.sh API Configuration
POLAR_API_URL=https://api.polar.sh/api/v1
POLAR_API_KEY=your_polar_api_key_here
POLAR_WEBHOOK_SECRET=your_webhook_secret_here

# Polar.sh Organization/Project IDs
POLAR_ORGANIZATION_ID=your_organization_id
POLAR_PROJECT_ID=your_project_id

# Webhook Endpoint (your domain)
POLAR_WEBHOOK_URL=https://yourdomain.com/api/polar

# Database Configuration (if using separate database for subscriptions)
# SUBSCRIPTION_DATABASE_URL=your_subscription_db_url

# Feature Flags
ENABLE_SUBSCRIPTION_LIMITS=true
ENABLE_USAGE_TRACKING=true
ENABLE_PAYMENT_HISTORY=true

# Subscription Plan IDs (from Polar.sh dashboard)
POLAR_PRICE_FREE=price_free_plan_id
POLAR_PRICE_STARTER=price_starter_plan_id
POLAR_PRICE_PRO=price_pro_plan_id
POLAR_PRICE_STARTER_YEARLY=price_starter_yearly_plan_id
POLAR_PRICE_PRO_YEARLY=price_pro_yearly_plan_id

# Payment Processing (if using additional payment processors)
# STRIPE_PUBLISHABLE_KEY=your_stripe_key
# STRIPE_SECRET_KEY=your_stripe_secret

# Email Notifications
ENABLE_SUBSCRIPTION_EMAILS=true
SUBSCRIPTION_FROM_EMAIL=noreply@yourdomain.com

# Analytics and Tracking
ENABLE_SUBSCRIPTION_ANALYTICS=true
TRACK_SUBSCRIPTION_EVENTS=true
